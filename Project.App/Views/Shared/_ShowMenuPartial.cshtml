@using Project.Entities
@using Project.DataBase
@model Project.App.ViewModels.MenuViewModel


@foreach (Category category in Model.Categories)
{
    if (category.SubcategoryCategories.Count != 0)
    {
        <li class="dropdown-submenu" >
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">@category.CategoryName</a>
            <ul class="dropdown-menu">
                @foreach (SubcategoryCategory sub in category.SubcategoryCategories)
                {
                    <li><a href="#">@sub.Subcategory.Name</a></li>
                }
            </ul>
        </li>
    }
    else
    {
        <li><a href="#">@category.CategoryName</a></li>
    }
}